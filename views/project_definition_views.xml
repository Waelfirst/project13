<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_project_definition_tree" model="ir.ui.view">
        <field name="name">project.definition.tree</field>
        <field name="model">project.definition</field>
        <field name="arch" type="xml">
            <tree string="Project Definitions">
                <field name="name"/>
                <field name="project_name"/>
                <field name="partner_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="total_cost" sum="Total Cost"/>
                <field name="total_sale" sum="Total Sale"/>
                <field name="total_profit" sum="Total Profit"/>
                <field name="state" widget="badge" 
                       decoration-success="state=='done'"
                       decoration-info="state in ('confirmed','in_progress')"
                       decoration-muted="state=='cancelled'"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_project_definition_form" model="ir.ui.view">
        <field name="name">project.definition.form</field>
        <field name="model">project.definition</field>
        <field name="arch" type="xml">
            <form string="Project Definition">
                <header>
                    <button name="action_confirm" string="Confirm" type="object" 
                            class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_start" string="Start" type="object" 
                            class="oe_highlight" invisible="state != 'confirmed'"/>
                    <button name="action_done" string="Mark as Done" type="object" 
                            class="oe_highlight" invisible="state != 'in_progress'"/>
                    <button name="action_cancel" string="Cancel" type="object" 
                            invisible="state in ('done','cancelled')"/>
                    <button name="action_draft" string="Reset to Draft" type="object" 
                            invisible="state not in ('cancelled','confirmed')"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,confirmed,in_progress,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="project_name" placeholder="Enter project name..."/>
                            <field name="partner_id" placeholder="Select customer..."/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Project Products">
                            <field name="product_line_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="uom_id"/>
                                    <field name="weight"/>
                                    <field name="cost_price"/>
                                    <field name="sale_price"/>
                                    <field name="total_cost" sum="Total Cost"/>
                                    <field name="total_sale" sum="Total Sale"/>
                                    <field name="profit" sum="Total Profit"/>
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer oe_right">
                                <field name="total_cost" widget="monetary"/>
                                <field name="total_sale" widget="monetary"/>
                                <field name="total_profit" widget="monetary"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_project_definition_search" model="ir.ui.view">
        <field name="name">project.definition.search</field>
        <field name="model">project.definition</field>
        <field name="arch" type="xml">
            <search string="Search Project">
                <field name="name"/>
                <field name="project_name"/>
                <field name="partner_id"/>
                <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
                <filter string="Confirmed" name="confirmed" domain="[('state','=','confirmed')]"/>
                <filter string="In Progress" name="in_progress" domain="[('state','=','in_progress')]"/>
                <filter string="Done" name="done" domain="[('state','=','done')]"/>
                <group expand="0" string="Group By">
                    <filter string="Customer" name="group_customer" context="{'group_by':'partner_id'}"/>
                    <filter string="Status" name="group_state" context="{'group_by':'state'}"/>
                    <filter string="Start Date" name="group_start_date" context="{'group_by':'start_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_project_definition" model="ir.actions.act_window">
        <field name="name">Project Definitions</field>
        <field name="res_model">project.definition</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first project definition!
            </p>
            <p>
                Define projects with finished products, quantities, and pricing.
            </p>
        </field>
    </record>
</odoo>
