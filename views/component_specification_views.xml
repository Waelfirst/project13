<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Specification Definition Tree View -->
    <record id="view_specification_definition_tree" model="ir.ui.view">
        <field name="name">component.specification.definition.tree</field>
        <field name="model">component.specification.definition</field>
        <field name="arch" type="xml">
            <tree string="Specification Definitions" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Specification Definition Form View -->
    <record id="view_specification_definition_form" model="ir.ui.view">
        <field name="name">component.specification.definition.form</field>
        <field name="model">component.specification.definition</field>
        <field name="arch" type="xml">
            <form string="Specification Definition">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Specification Name (e.g., Material, Color, Dimensions)"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" placeholder="Description or usage notes..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Specification Definition Action -->
    <record id="action_specification_definition" model="ir.actions.act_window">
        <field name="name">Specification Definitions</field>
        <field name="res_model">component.specification.definition</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define Component Specifications
            </p>
            <p>
                Create specification types that can be used for components.<br/>
                Examples: Material, Color, Dimensions, Thickness, Quality, etc.
            </p>
        </field>
    </record>

    <!-- Component Specification Wizard Form View -->
    <record id="view_component_specification_wizard_form" model="ir.ui.view">
        <field name="name">component.specification.wizard.form</field>
        <field name="model">component.specification.wizard</field>
        <field name="arch" type="xml">
            <form string="Component Specifications">
                <sheet>
                    <div class="oe_title">
                        <label for="component_name" string="Component Specifications"/>
                        <h1>
                            <field name="component_name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <field name="component_id" invisible="1"/>
                        <field name="source_model" invisible="1"/>
                        <field name="source_id" invisible="1"/>
                    </group>
                    <field name="specification_line_ids">
                        <tree editable="bottom">
                            <field name="sequence" widget="handle"/>
                            <field name="specification_id" 
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="value" required="1"/>
                            <field name="notes"/>
                        </tree>
                    </field>
                </sheet>
                <footer>
                    <button string="Save" name="action_save_specifications" 
                            type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
