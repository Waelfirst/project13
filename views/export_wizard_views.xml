<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Export Components Wizard Form -->
    <record id="view_export_components_wizard_form" model="ir.ui.view">
        <field name="name">export.components.wizard.form</field>
        <field name="model">export.components.wizard</field>
        <field name="arch" type="xml">
            <form string="Export Components to Excel">
                <sheet>
                    <div class="alert alert-info" role="alert">
                        <strong>Export Components</strong>
                        <p>Export component data with specifications to Excel file.</p>
                    </div>
                    <group>
                        <field name="pricing_id" readonly="1"/>
                    </group>
                    <group string="Export Options">
                        <field name="include_specifications"/>
                        <field name="include_bom_data"/>
                    </group>
                    <group string="Export Details">
                        <p><strong>Components Sheet:</strong> Main component data with Additional Code field showing all specifications.</p>
                        <p invisible="not include_specifications"><strong>Specifications Sheet:</strong> Detailed specification breakdown.</p>
                        <p invisible="not include_bom_data"><strong>BOM Sheets:</strong> BOM Materials and Operations data.</p>
                    </group>
                </sheet>
                <footer>
                    <button string="Export to Excel" name="action_export" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
