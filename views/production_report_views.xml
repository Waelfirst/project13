<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Production Progress Report Tree View -->
    <record id="view_production_progress_report_tree" model="ir.ui.view">
        <field name="name">production.progress.report.tree</field>
        <field name="model">production.progress.report</field>
        <field name="arch" type="xml">
            <tree string="Production Progress Report" create="false" edit="false" delete="false"
                  decoration-success="status=='completed'"
                  decoration-info="status=='in_progress'"
                  decoration-muted="status=='not_started'"
                  decoration-danger="status=='cancelled'">
                <field name="project_id"/>
                <field name="product_id"/>
                <field name="component_id"/>
                <field name="planned_quantity"/>
                <field name="planned_weight"/>
                <field name="produced_quantity"/>
                <field name="current_operation"/>
                <field name="progress_percentage" widget="progressbar"/>
                <field name="status"/>
                <field name="production_state"/>
            </tree>
        </field>
    </record>

    <!-- Production Progress Report Pivot View -->
    <record id="view_production_progress_report_pivot" model="ir.ui.view">
        <field name="name">production.progress.report.pivot</field>
        <field name="model">production.progress.report</field>
        <field name="arch" type="xml">
            <pivot string="Production Progress Analysis">
                <field name="project_id" type="row"/>
                <field name="status" type="col"/>
                <field name="planned_quantity" type="measure"/>
                <field name="produced_quantity" type="measure"/>
                <field name="progress_percentage" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Production Progress Report Graph View -->
    <record id="view_production_progress_report_graph" model="ir.ui.view">
        <field name="name">production.progress.report.graph</field>
        <field name="model">production.progress.report</field>
        <field name="arch" type="xml">
            <graph string="Production Progress" type="bar">
                <field name="component_id"/>
                <field name="planned_quantity" type="measure"/>
                <field name="produced_quantity" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Production Progress Report Search -->
    <record id="view_production_progress_report_search" model="ir.ui.view">
        <field name="name">production.progress.report.search</field>
        <field name="model">production.progress.report</field>
        <field name="arch" type="xml">
            <search string="Search Production Progress">
                <field name="project_id"/>
                <field name="product_id"/>
                <field name="component_id"/>
                <filter string="Not Started" name="not_started" domain="[('status','=','not_started')]"/>
                <filter string="In Progress" name="in_progress" domain="[('status','=','in_progress')]"/>
                <filter string="Completed" name="completed" domain="[('status','=','completed')]"/>
                <group expand="0" string="Group By">
                    <filter string="Project" name="group_project" context="{'group_by':'project_id'}"/>
                    <filter string="Product" name="group_product" context="{'group_by':'product_id'}"/>
                    <filter string="Status" name="group_status" context="{'group_by':'status'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Production Progress Report Action -->
    <record id="action_production_progress_report" model="ir.actions.act_window">
        <field name="name">Production Progress Report</field>
        <field name="res_model">production.progress.report</field>
        <field name="view_mode">pivot,graph,tree</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No production data found!
            </p>
            <p>
                This report compares planned components with actual production status.
            </p>
        </field>
    </record>

    <!-- Material Usage Report Tree View -->
    <record id="view_material_usage_report_tree" model="ir.ui.view">
        <field name="name">material.usage.report.tree</field>
        <field name="model">material.usage.report</field>
        <field name="arch" type="xml">
            <tree string="Material Usage Report" create="false" edit="false" delete="false"
                  decoration-success="status=='sufficient'"
                  decoration-info="status in ('ordered','received')"
                  decoration-warning="status=='partial'"
                  decoration-danger="status=='shortage'">
                <field name="project_id"/>
                <field name="product_id"/>
                <field name="component_id"/>
                <field name="material_id"/>
                <field name="required_quantity"/>
                <field name="available_quantity"/>
                <field name="consumed_quantity"/>
                <field name="ordered_quantity"/>
                <field name="received_quantity"/>
                <field name="shortage_quantity"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <!-- Material Usage Report Pivot View -->
    <record id="view_material_usage_report_pivot" model="ir.ui.view">
        <field name="name">material.usage.report.pivot</field>
        <field name="model">material.usage.report</field>
        <field name="arch" type="xml">
            <pivot string="Material Usage Analysis">
                <field name="project_id" type="row"/>
                <field name="material_id" type="row"/>
                <field name="status" type="col"/>
                <field name="required_quantity" type="measure"/>
                <field name="available_quantity" type="measure"/>
                <field name="shortage_quantity" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Material Usage Report Graph View -->
    <record id="view_material_usage_report_graph" model="ir.ui.view">
        <field name="name">material.usage.report.graph</field>
        <field name="model">material.usage.report</field>
        <field name="arch" type="xml">
            <graph string="Material Usage" type="bar" stacked="1">
                <field name="material_id"/>
                <field name="required_quantity" type="measure"/>
                <field name="available_quantity" type="measure"/>
                <field name="consumed_quantity" type="measure"/>
                <field name="shortage_quantity" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Material Usage Report Search -->
    <record id="view_material_usage_report_search" model="ir.ui.view">
        <field name="name">material.usage.report.search</field>
        <field name="model">material.usage.report</field>
        <field name="arch" type="xml">
            <search string="Search Material Usage">
                <field name="project_id"/>
                <field name="product_id"/>
                <field name="material_id"/>
                <filter string="Sufficient" name="sufficient" domain="[('status','=','sufficient')]"/>
                <filter string="Shortage" name="shortage" domain="[('status','=','shortage')]"/>
                <filter string="Partial" name="partial" domain="[('status','=','partial')]"/>
                <filter string="Ordered" name="ordered" domain="[('status','=','ordered')]"/>
                <group expand="0" string="Group By">
                    <filter string="Project" name="group_project" context="{'group_by':'project_id'}"/>
                    <filter string="Product" name="group_product" context="{'group_by':'product_id'}"/>
                    <filter string="Material" name="group_material" context="{'group_by':'material_id'}"/>
                    <filter string="Status" name="group_status" context="{'group_by':'status'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Material Usage Report Action -->
    <record id="action_material_usage_report" model="ir.actions.act_window">
        <field name="name">Material Usage Report</field>
        <field name="res_model">material.usage.report</field>
        <field name="view_mode">pivot,graph,tree</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No material data found!
            </p>
            <p>
                This report shows material requirements vs actual usage and purchasing.
            </p>
        </field>
    </record>
</odoo>
