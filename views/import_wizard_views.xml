<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Import Components Wizard Form - SIMPLIFIED VERSION -->
    <record id="view_import_components_wizard_form" model="ir.ui.view">
        <field name="name">import.components.wizard.form</field>
        <field name="model">import.components.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Components from Excel">
                <sheet>
                    <!-- Info Banner -->
                    <div class="alert alert-info" role="alert" style="margin-bottom: 10px;">
                        <h4><i class="fa fa-info-circle"/> Import Components from Excel</h4>
                        <p>Upload Excel file with components and BOM data</p>
                    </div>

                    <!-- Main Settings -->
                    <group>
                        <group>
                            <field name="pricing_id" invisible="1"/>
                            <field name="product_id" readonly="1"/>
                            <field name="import_type" widget="radio"/>
                        </group>
                        <group>
                            <field name="excel_file" filename="filename"
                                   class="oe_inline" widget="binary"/>
                            <field name="filename" invisible="1"/>
                        </group>
                    </group>

                    <!-- Instructions -->
                    <group string="Instructions">
                        <field name="notes" nolabel="1" readonly="1"
                               widget="text" class="oe_form_text"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Import Data" name="action_import"
                            type="object" class="btn-primary"/>
                    <button string="Download Template" name="action_download_template"
                            type="object" class="btn-success"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>