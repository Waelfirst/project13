<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Operations Excel Wizard Form View -->
    <record id="view_operations_excel_wizard_form" model="ir.ui.view">
        <field name="name">operations.excel.wizard.form</field>
        <field name="model">operations.excel.wizard</field>
        <field name="arch" type="xml">
            <form string="Operations Excel Import/Export">
                <sheet>
                    <!-- Header with Mode Selection -->
                    <div class="alert alert-primary" role="alert">
                        <h4><i class="fa fa-file-excel-o"/> Operations Data - Excel Import/Export</h4>
                        <p>Export operations to Excel for offline editing, then re-import actual data</p>
                    </div>

                    <group>
                        <field name="execution_id" invisible="1"/>
                        <field name="mode" widget="radio" class="oe_horizontal"/>
                    </group>

                    <!-- Export Mode Section -->
                    <group invisible="mode != 'export'" string="üì§ Export Options">
                        <field name="include_specifications"
                               widget="boolean_toggle"/>
                    </group>

                    <!-- Import Mode Section -->
                    <group invisible="mode != 'import'" string="üì• Import File">
                        <field name="excel_file"
                               filename="filename"
                               widget="binary"
                               class="oe_inline"/>
                        <field name="filename" invisible="1"/>
                    </group>

                    <!-- Instructions Section -->
                    <group string="üìã Instructions" class="mt-3">
                        <div class="alert alert-warning" role="alert" invisible="mode != 'export'">
                            <h5>Export Instructions:</h5>
                            <ul>
                                <li>Excel file will contain all operations with full details</li>
                                <li><strong>Gray columns</strong> are read-only (don't edit)</li>
                                <li><strong>Yellow columns</strong> are editable:
                                    <ul>
                                        <li>Actual Duration (minutes)</li>
                                        <li>Workers Assigned</li>
                                        <li>Machines Assigned</li>
                                    </ul>
                                </li>
                                <li>Save file after editing and use Import mode to upload</li>
                            </ul>
                        </div>

                        <div class="alert alert-warning" role="alert" invisible="mode != 'import'">
                            <h5>Import Instructions:</h5>
                            <ul>
                                <li>Upload Excel file previously exported from this system</li>
                                <li><strong>‚ö†Ô∏è DO NOT</strong> edit gray columns (ID, Project, Component, etc.)</li>
                                <li><strong>‚ö†Ô∏è DO NOT</strong> add or remove rows</li>
                                <li><strong>‚úì ONLY</strong> edit yellow columns (Actual Duration, Workers, Machines)</li>
                                <li>System will update all operations with actual data</li>
                            </ul>
                        </div>

                        <field name="notes"
                               nolabel="1"
                               readonly="1"
                               widget="text"
                               class="text-muted"
                               invisible="1"/>
                    </group>

                    <!-- Tips Section -->
                    <div class="alert alert-info mt-3" role="alert" invisible="mode != 'export'">
                        <i class="fa fa-lightbulb-o"/> <strong>Tip:</strong> Use Excel filters and formulas to analyze data before importing
                    </div>

                    <div class="alert alert-success mt-3" role="alert" invisible="mode != 'import'">
                        <i class="fa fa-check-circle"/> <strong>Note:</strong> Import will validate and update all operations automatically
                    </div>
                </sheet>
                <footer>
                    <!-- Export Button -->
                    <button string="üì§ Export to Excel"
                            name="action_export"
                            type="object"
                            class="btn-primary"
                            invisible="mode != 'export'"/>

                    <!-- Import Button -->
                    <button string="üì• Import from Excel"
                            name="action_import"
                            type="object"
                            class="btn-primary"
                            invisible="mode != 'import'"/>

                    <button string="Cancel"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action for Export Wizard -->
    <record id="action_operations_excel_export_wizard" model="ir.actions.act_window">
        <field name="name">Export Operations to Excel</field>
        <field name="res_model">operations.excel.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Action for Import Wizard -->
    <record id="action_operations_excel_import_wizard" model="ir.actions.act_window">
        <field name="name">Import Operations from Excel</field>
        <field name="res_model">operations.excel.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>